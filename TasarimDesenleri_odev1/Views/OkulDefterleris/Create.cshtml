@model TasarimDesenleri_odev1.Models.OkulDefterleri

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    #urunler {
        width: 1920px;
        background-color: #ccc;
        padding: 30px;
    }
</style>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div id="urunler">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-2">
                    <font size="2" face="Helvetica" color="blue">Ürün Adı : </font>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.adi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.adi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <font size="2" face="Helvetica" color="blue">Fiyat : </font>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fiyat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fiyat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <font size="2" face="Helvetica" color="blue">Ürün Bilgisi : </font>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.urun_bilgisi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.urun_bilgisi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-2">
                    <font size="2" face="Helvetica" color="blue">Resim Yolu : </font>
                </div>
                <div class="col-md-10">
                    @Html.DropDownList("ResimYolu_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ResimYolu_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ürün Oluştur" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("GERİ DÖN", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
